<div id="wrap">
  <div id="title">OBJECTIF FOLLOWERS</div>
  <div class="goal-cont">
    <div id="goal-bar">
      <div class="goal-numbers">
        <span id="goal-progress">--%</span>
        <div id="goal-start"></div>
